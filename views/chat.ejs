                        document.querySelectorAll(`.avatar[data-user-id="${update.userId}"]`).forEach(img => {
                            img.src = update.avatar;
                        });
                    });
                }
            } catch (error) {
                console.error("Error fetching avatar updates:", error);
            }
            */
        }

        // Initial fetch of messages and start polling
        function initializeChat() {
             // Set initial timestamp from the last message rendered by EJS, if any
            const lastRenderedMessage = messagesContainer.querySelector('.message:last-child');
            if (lastRenderedMessage) {
                // Assuming the backend provides created_at for initial messages
                // Need to get the timestamp from the EJS data if possible, otherwise start from 0
                // Example: lastMessageTimestamp = new Date('<%= messages.length ? messages[messages.length - 1].created_at : 0 %>').getTime();
                // For now, we'll stick to 0 and let the first fetch get everything
                lastMessageTimestamp = 0; 
            }
            
            fetchNewMessages().then(() => {
                messagesContainer.scrollTop = messagesContainer.scrollHeight; // Scroll after initial fetch
            });
            pollingInterval = setInterval(fetchNewMessages, 5000); // Poll every 5 seconds
            // setInterval(checkAvatarUpdates, 15000); // Keep avatar polling commented out
        }

        // Scroll to the bottom of the messages container on load
        // Use window.onload or DOMContentLoaded to ensure elements are ready
        window.addEventListener('load', () => {
            initializeChat();
        });

        // Clear polling interval when the user navigates away (optional but good practice)
        window.addEventListener('beforeunload', () => {
            if (pollingInterval) {
                clearInterval(pollingInterval);
            }
        });

    </script>
</body>
<footer style="margin-top: 10px;"> <!-- Adjusted margin -->
  <%- include('partials/footer') %>
</footer>
</html>

